@using RecipeApp.Web.ViewModels.RecipeViewModels
@model DeleteRecipeViewModel

@{
    ViewData["Title"] = "Delete Recipe";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="col-md-6 text-center">
        <h2 class="mb-4">Delete Recipe</h2>

        <div class="alert alert-danger">
            <p>Are you sure you want to delete this recipe?</p>
        </div>

        <div class="card mb-4 shadow-sm">
            <img src="@(!string.IsNullOrEmpty(Model.ImageUrl) ? Model.ImageUrl : RecipeApp.Common.ApplicationConstants.NoImageUrl)"
                 class="card-img-top img-fluid"
                 alt="@Model.Title">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text">@Model.Description</p>
            </div>
        </div>

        <form asp-controller="Recipe" asp-action="Delete" method="post">
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="d-flex justify-content-center">
                <button type="submit" asp-route-pageNumber="@ViewData["PageNumber"]" class="recipe-delete-btn btn-danger me-3">Delete</button>
                <a asp-controller="Recipe" asp-action="MyRecipes" asp-route-pageNumber="@ViewData["PageNumber"]" class="recipe-cancel-del-btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

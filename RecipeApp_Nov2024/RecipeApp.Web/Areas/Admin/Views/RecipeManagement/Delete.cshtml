@using RecipeApp.Web.ViewModels.AdminViewModels.RecipeManagementViewModels
@model AdminDeleteRecipeViewModel

@{
    ViewData["Title"] = "Admin - Delete Recipe";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="col-md-8 text-center">
        <h2 class="recipe-del-adm-card mb-4 text-danger">Admin - Delete Recipe</h2>

        <div class="alert alert-danger">
            <p><strong>Warning:</strong> This action is irreversible. Deleting this recipe will permanently remove it from the system.</p>
        </div>

        <div class="card mb-4 shadow-sm">
            <img src="@(!string.IsNullOrEmpty(Model.ImageUrl) ? Model.ImageUrl : RecipeApp.Common.ApplicationConstants.NoImageUrl)"
                 class="card-img-top img-fluid"
                 alt="@Model.Title">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
                <p class="card-text">@Model.Description</p>
                <p class="text-muted">
                    Created by: <strong>@Model.CreatedBy</strong><br />
                    Date: <strong>@Model.CreatedDate.ToString("MMMM dd, yyyy")</strong>
                </p>
            </div>
        </div>

        <form asp-controller="RecipeManagement" asp-action="Delete" method="post">
            <input type="hidden" name="Id" value="@Model.Id" />
            <input type="hidden" name="PageNumber" value="@ViewData["PageNumber"]" />
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-danger me-3">Delete Recipe</button>
                <a asp-controller="RecipeManagement" asp-action="Index" asp-route-pageNumber="@ViewData["PageNumber"]" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

